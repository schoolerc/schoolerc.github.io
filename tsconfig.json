{
  "extends": "astro/tsconfigs/strict",
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.astro",
    "./src/**/*.vue",
    "./src/**/*.ts",
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ]
    },
    "strictNullChecks": true,
    "noImplicitAny": true,
    "verbatimModuleSyntax": true
  }
}
